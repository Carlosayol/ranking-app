{
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "[django-html]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "files.associations": {
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "beautify.language": {
    "html": ["htm", "html", "django-html"]
  }
}
